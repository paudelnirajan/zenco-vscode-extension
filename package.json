{
  "name": "zenco-vscode",
  "displayName": "Zenco",
  "description": "AI-powered code refactoring with Zenco",
  "version": "0.0.3",
  "publisher": "paudelnirajan",
  "icon": "zenco.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paudelnirajan/zenco-vscode-extension"
  },
  "homepage": "https://paudelnirajan.github.io",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zenco-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "zenco-vscode.refactorFile",
        "title": "Zenco: Refactor Current File"
      },
      {
        "command": "zenco-vscode.addDocstrings",
        "title": "Zenco: Add Docstrings"
      },
      {
        "command": "zenco-vscode.addTypeHints",
        "title": "Zenco: Add Type Hints"
      },
      {
        "command": "zenco-vscode.fixMagicNumbers",
        "title": "Zenco: Fix Magic Numbers"
      },
      {
        "command": "zenco-vscode.removeDeadCode",
        "title": "Zenco: Remove Dead Code"
      },
      {
        "command": "zenco-vscode.showMenu",
        "title": "Zenco: Show Feature Menu"
      },
      {
        "command": "zenco-vscode.refactorFileStrict",
        "title": "Zenco: Refactor File (Strict Mode)"
      },
      {
        "command": "zenco-vscode.improveDocstrings",
        "title": "Zenco: Improve Existing Docstrings"
      },
      {
        "command": "zenco-vscode.removeDeadCodeStrict",
        "title": "Zenco: Remove Dead Code (Strict Mode)"
      },
      {
        "command": "zenco-vscode.openSettings",
        "title": "Zenco: Configure Settings"
      }
    ],
    "configuration": {
      "title": "Zenco",
      "properties": {
        "zenco.provider": {
          "type": "string",
          "enum": [
            "groq",
            "openai",
            "anthropic",
            "gemini"
          ],
          "default": "groq",
          "description": "LLM provider to use for code analysis"
        },
        "zenco.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected provider (stored securely)",
          "markdownDescription": "API key for the selected provider. Get your key from:\n- Groq: https://console.groq.com/keys\n- OpenAI: https://platform.openai.com/api-keys\n- Anthropic: https://console.anthropic.com/\n- Gemini: https://aistudio.google.com/app/apikey"
        },
        "zenco.model": {
          "type": "string",
          "default": "",
          "description": "Model name (leave empty for provider default)",
          "markdownDescription": "Specific model to use. Examples:\n- Groq: `llama-3.3-70b-versatile`\n- OpenAI: `gpt-4o-mini`\n- Anthropic: `claude-3-5-sonnet-latest`\n- Gemini: `gemini-1.5-pro`"
        },
        "zenco.docstringStyle": {
          "type": "string",
          "enum": [
            "google",
            "numpy",
            "rst"
          ],
          "default": "google",
          "description": "Docstring format style",
          "enumDescriptions": [
            "Google-style docstrings (most common)",
            "NumPy-style docstrings (scientific Python)",
            "reStructuredText (Sphinx documentation)"
          ]
        },
        "zenco.strategy": {
          "type": "string",
          "enum": [
            "llm",
            "mock"
          ],
          "default": "llm",
          "description": "Processing strategy",
          "enumDescriptions": [
            "Use real LLM API (requires API key)",
            "Mock mode for testing (no API calls)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}