{
  "name": "zenco-vscode",
  "displayName": "zenco-vscode",
  "description": "AI-powered code refactoring with Zenco",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zenco-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "zenco-vscode.refactorFile",
        "title": "Zenco: Refactor Current File"
      },
      {
        "command": "zenco-vscode.addDocstrings",
        "title": "Zenco: Add Docstrings"
      },
      {
        "command": "zenco-vscode.addTypeHints",
        "title": "Zenco: Add Type Hints"
      },
      {
        "command": "zenco-vscode.fixMagicNumbers",
        "title": "Zenco: Fix Magic Numbers"
      },
      {
        "command": "zenco-vscode.removeDeadCode",
        "title": "Zenco: Remove Dead Code"
      },
      {
        "command": "zenco-vscode.showMenu",
        "title": "Zenco: Show Feature Menu"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}